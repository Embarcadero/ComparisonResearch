<Window x:Class="FileExplorerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:FileExplorerApp.ViewModels"
        xmlns:classes="clr-namespace:FileExplorerApp.Models"
        xmlns:local="clr-namespace:FileExplorerApp" xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        mc:Ignorable="d" WindowState="Maximized"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewmodel:MainWindowViewmodel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox Margin="10" Text="{Binding Currentpath}"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>
            <local:MyTreeView x:Name="treeView" Margin="5" ItemsSource="{Binding FilesSource}" 
                              SelectedItem="{Binding SelectedFileObject,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                              >
                <TreeView.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                        <Setter Property="KeyboardNavigation.AcceptsReturn" Value="True" />
                    </Style>
                </TreeView.ItemContainerStyle>
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type classes:FileSystemObjectInfo}" ItemsSource="{Binding Path=Children}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding Path=FileInfo.Icon, UpdateSourceTrigger=PropertyChanged}" Margin="0,1,8,1"></Image>
                            <TextBlock Text="{Binding Path=FileSystemInfo.Name}"></TextBlock>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.Resources>
            </local:MyTreeView>
            <ListBox x:Name="listbox" Grid.Column="1" SelectionMode="Extended" HorizontalAlignment="Stretch"
                     ItemsSource="{Binding DetailFilesSource,UpdateSourceTrigger=PropertyChanged}" Margin="5" HorizontalContentAlignment="Stretch" >
                <i:Interaction.Behaviors>
                    <local:MyObjectListBoxSelectionBehavior SelectedItems="{Binding SelectedDetailFiles,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" />
                </i:Interaction.Behaviors>
               
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Image Source="{Binding Path=FileInfo.Icon, UpdateSourceTrigger=PropertyChanged}" Margin="0,1,8,1"></Image>
                                <TextBlock Text="{Binding Path=FileSystemInfo.Name}" TextWrapping="Wrap" TextTrimming="CharacterEllipsis"></TextBlock>
                            </StackPanel>
                            <TextBlock Text="{Binding Path=FileSystemInfo.LastWriteTime}" Grid.Column="1"></TextBlock>
                            <TextBlock Text="{Binding Path=FileInfo.Type}" Grid.Column="2"></TextBlock>
                            <TextBlock Text="{Binding Path=FileInfo.Size}" Grid.Column="3"></TextBlock>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBlock Margin="10 2 0 2" Text="{Binding NumberOfDetailItems,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
            <TextBlock Margin="20 2 0 2" VerticalAlignment="Center">
              <Run Text="{Binding SelectedDetailFileCount}"/>
              <Run Text="items selected"/>
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedDetailFileCount}" Value="0">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
