<UserControl x:Class="Github_Recent_Explorer_Test.Components.SortComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Github_Recent_Explorer_Test.Components"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Github Recent Explorer Test;component/Resources/Styles/SortComboBoxStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ComboBox Foreground="White" Background="{x:Null}" ItemsSource="{Binding Path=AvailableCustomFilters}" SelectedItem="{Binding Path=CustomFilter, Mode=OneWayToSource}" FontSize="11"/>

</UserControl>
